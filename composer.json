{
    "name": "cyndaron/cyndaron",
    "description": "Simple and lightweight CMS",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Cyndaron\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "allow-plugins": {
            "cweagans/composer-patches": true
        }
    },
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-imagick": "*",
        "ext-json": "*",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "components/jquery": "^3.5",
        "ckeditor/ckeditor": "dev-full/4.7.x",
        "twbs/bootstrap": "^4.5",
        "symfony/http-foundation": "^6.0",
        "thecodingmachine/safe": "^2.1",
        "symfony/mailer": "^6.0",
        "symfony/http-kernel": "^6.0",
        "symfony/routing": "^6.0",
        "illuminate/view": "^9.0",
        "conedevelopment/blade-filters": "*",
        "mollie/mollie-api-php": "^2.32",
        "phpoffice/phpspreadsheet": "^1.18",
        "mpdf/mpdf": "*",
        "cweagans/composer-patches": "^1.7"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "thecodingmachine/phpstan-safe-rule": "*",
        "phpstan/phpstan": "*",
        "friendsofphp/php-cs-fixer": "*",
        "phpstan/phpstan-strict-rules": "*"
    },
    "extra": {
        "patches": {
            "illuminate/view": {
                "fix-view-service-provider": "patches/fix-view-service-provider.patch"
            }
        }
    },
    "scripts": {
        "phpstan": [
            "vendor/bin/phpstan analyse src --level 8"
        ],
        "cscheck": [
            "vendor/bin/php-cs-fixer fix src/ --allow-risky=yes --dry-run --diff"
        ],
        "cs-fix": [
            "vendor/bin/php-cs-fixer fix src/ --allow-risky=yes"
        ]
    }
}
