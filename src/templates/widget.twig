{% macro modal(id, title, body, footer, sizeClass = '') %}
    <div id="{{ id }}" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog {{ sizeClass }}" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><?=$title?></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Sluiten">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ body }}
                </div>
                <div class="modal-footer">
                    {{ footer }}
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro pageTabs(subPages, urlPrefix = '', currentPage = '') %}
    <ul class="nav nav-tabs">
        {% for link, title in subPages %}
        <li role="presentation" class="nav-item">
            <a class="nav-link {% if link == currentPage %}active{% endif %}" href="{{ urlPrefix }}{{ rtrim(link, '/') }}">{{ title }}</a>
        </li>
        {% endfor %}
    </ul>
{% endmacro %}

{% macro editorDropdown(id, label, options, selected) %}
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="{{ id }}">{{ label }}: </label>
        <div class="col-sm-5">
            <select id="{{ id }}" name="{{ id }}" class="form-control custom-select">
                {% for value, description in options %}
                    <option value="{{ value }}" {% if (value == selected) %}selected{% endif %}>{{ description }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
{% endmacro %}

{% macro editorCheckbox(id, description, checked) %}
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="{{ id }}" name="{{ id }}" {% if checked %}checked{% endif %} value="1">
        <label class="form-check-label" for="{{ id }}">{{ description }}</label>
    </div>
{% endmacro %}